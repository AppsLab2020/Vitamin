<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="Lekarnik.AppShell"
       xmlns:views="clr-namespace:Lekarnik.Views"
       x:Name="shell">


    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Priznaky" Icon="ill.png">
            <ShellContent ContentTemplate="{DataTemplate views:Priznaky}" Shell.TabBarBackgroundColor="White" Shell.TabBarTitleColor="Blue" Shell.DisabledColor="Red" Shell.UnselectedColor="Red"/>
        </Tab>
        <Tab Title="Vitaminy" Icon="vitamin.png" >
            <ShellContent ContentTemplate="{DataTemplate views:Vitaminy}" Shell.TabBarBackgroundColor="White" Shell.TabBarTitleColor="Blue" Shell.DisabledColor="Red" Shell.UnselectedColor="Red"/>
        </Tab>
    </FlyoutItem>
    <MenuItem Text="Help"
              Clicked="EmailClick_Clicked" />
</Shell>